{
  "name": "@toknowwhy/theunit-contracts",
  "description": "",
  "version": "1.0.0",
  "author": {
    "name": "toknowwhy",
    "url": "https://github.com/toknowwhy"
  },
  "devDependencies": {
    "@types/node": "^20.9.0",
    "prettier": "^3.0.0",
    "ts-node": "^10.9.1"
  },
  "keywords": [
    "blockchain",
    "ethereum",
    "forge",
    "foundry",
    "smart-contracts",
    "solidity",
    "template"
  ],
  "private": true,
  "scripts": {
    "clean": "rm -rf cache out",
    "build": "forge build",
    "deploy:ticket:arbitrumGoerli": "forge script script/DeployTicket.s.sol:DeployToken --rpc-url https://arbitrum-goerli.infura.io/v3/$API_KEY_INFURA --broadcast --verify --etherscan-api-key $API_KEY_ARBISCAN",
    "generate": "ts-node ./script/generateContracts.ts",
    "lint": "pnpm lint:sol && pnpm prettier:check",
    "lint:sol": "forge fmt --check && pnpm solhint {script,src,test}/**/*.sol",
    "prettier:check": "prettier --check **/*.{json,md,yml} --ignore-path=.prettierignore",
    "prettier:write": "prettier --write **/*.{json,md,yml} --ignore-path=.prettierignore",
    "test": "forge test",
    "test:coverage": "forge coverage",
    "test:coverage:report": "forge coverage --report lcov && genhtml lcov.info --branch-coverage --output-dir coverage"
  },
  "dependencies": {
    "solhint": "^3.6.2"
  }
}
